@model List<Car>

<div class="container mt-5">
    <h1 class="text-center fw-bold">🚗 Най-новите обяви за автомобили</h1>

    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <img src="@car.ImageUrl" class="card-img-top" alt="@car.Brand @car.Model" style="height: 180px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@car.Brand @car.Model</h5>
                        <p class="card-text"><strong>Година:</strong> @car.Year</p>
                        <p class="card-text"><strong>Цена:</strong> @car.Price лв</p>
                        <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary w-100">🔍 Преглед</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
