@model DanAutoPower.Models.ApplicationUser

<!-- Bootstrap 5 и персонализиран стил -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

@{
    ViewData["Title"] = "Изтриване на потребител";
}

<h2>Изтриване на потребител</h2>

<h4>Сигурни ли сте, че искате да изтриете този потребител?</h4>

<div>
    <h4>@Model.UserName</h4>
    <dl class="row">
        <dt class="col-sm-2">Имейл</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<form asp-action="Delete" class="mt-3 d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">🗑️ Изтриване</button>
    <a asp-action="Index" class="btn btn-outline-secondary">⬅ Отказ</a>
</form>
