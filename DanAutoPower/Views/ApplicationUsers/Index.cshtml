@model IEnumerable<DanAutoPower.Models.ApplicationUser>

<!-- Bootstrap 5 и персонализиран стил -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

@{
    ViewData["Title"] = "Потребители";
}

<h2>Потребители</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Имейл</th>
            <th>Роля</th>
            <th>Промяна</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@ViewBag.UserRoles[user.Id]</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-warning btn-sm me-1">Редакция</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-outline-danger btn-sm">Изтриване</a>
                </td>
            </tr>
        }
    </tbody>
</table>
