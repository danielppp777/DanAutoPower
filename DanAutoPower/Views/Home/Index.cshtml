@{
    ViewData["Title"] = "Начална Страница";
}

<!-- Bootstrap 5 и персонализиран стил -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="text-center fw-bold">Добре дошли в DanAutoPower!</h1>
    <p class="text-center text-muted">Вашето удобно място за търсене на автомобили.</p>

    <h2 class="mt-5 mb-3">🚗 Най-новите обяви за автомобили</h2>

    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <img src="@car.ImageUrl" class="card-img-top" alt="@car.Brand @car.Model">
                    <div class="card-body">
                        <h5 class="card-title">@car.Brand @car.Model</h5>
                        <p class="card-text"><strong>Година:</strong> @car.Year</p>
                        <p class="card-text"><strong>Цена:</strong> @car.Price лв</p>
                        <a href="/Cars/Details/@car.Id" class="btn btn-primary w-100">🔍 Преглед</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
        transition: transform 0.2s;
    }

    .card:hover {
        transform: scale(1.05);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background 0.3s ease-in-out;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
