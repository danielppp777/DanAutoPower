@model DanAutoPower.Models.Car

@{
    ViewData["Title"] = "Добави нов автомобил";
}

<div class="container mt-5">
    <h2 class="text-center">Добави нов автомобил</h2>

    <form method="post" enctype="multipart/form-data" asp-action="Create">
        <div class="form-group">
            <label for="Brand">Марка</label>
            <input type="text" class="form-control" id="Brand" name="Brand" required>
        </div>

        <div class="form-group mt-3">
            <label for="Model">Модел</label>
            <input type="text" class="form-control" id="Model" name="Model" required>
        </div>

        <div class="form-group mt-3">
            <label for="Year">Година</label>
            <input type="number" class="form-control" id="Year" name="Year" required>
        </div>

        <div class="form-group mt-3">
            <label for="Price">Цена</label>
            <input type="number" class="form-control" id="Price" name="Price" required>
        </div>

        <div class="form-group mt-3">
            <label for="ImageUrl">Изображение</label>
            <input type="file" class="form-control" id="ImageUrl" name="ImageUrl">
        </div>

        <button type="submit" class="btn btn-primary mt-4">Добави автомобила</button>
    </form>

    <div class="mt-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Обратно към списъка с автомобили</a>
    </div>
</div>
