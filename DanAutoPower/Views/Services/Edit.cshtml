@model DanAutoPower.Models.Service

@{
    ViewData["Title"] = "Редакция на услуга";
}

<div class="container py-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary mb-4">Редакция на услуга</h2>

        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Име на услугата</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Price" class="form-label">Цена (лв.)</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label">Описание</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">⬅ Назад</a>
                <button type="submit" class="btn btn-success">Запази промените</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
