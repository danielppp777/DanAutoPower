@model DanAutoPower.Models.Service


<!-- Bootstrap 5 и персонализиран стил -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
@{
    ViewData["Title"] = "Детайли за услуга";
}

<h2>Детайли за услугата</h2>

<div>
    <h4>Име: @Model.Name</h4>
    <p><strong>Описание:</strong> @Model.Description</p>
    <p><strong>Цена:</strong> @Model.Price €</p>
</div>

<div class="mt-3">
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Редакция</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</div>
