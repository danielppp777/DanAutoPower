@model DanAutoPower.Models.Service


<!-- Bootstrap 5 и персонализиран стил -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

@{
    ViewData["Title"] = "Изтриване на услуга";
}

<h2>Сигурни ли сте, че искате да изтриете тази услуга?</h2>

<div>
    <h4>Име: @Model.Name</h4>
    <p><strong>Описание:</strong> @Model.Description</p>
    <p><strong>Цена:</strong> @Model.Price лв</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Изтриване</button>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</form>
