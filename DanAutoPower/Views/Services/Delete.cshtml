@model DanAutoPower.Models.Service

@{
    ViewData["Title"] = "Изтриване на услуга";
}

<div class="container py-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-danger mb-3">Изтриване на услуга</h2>

        <div class="alert alert-warning">
            <strong>Сигурни ли сте, че искате да изтриете тази услуга?</strong>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Име:</label>
                <div class="form-control-plaintext">@Model.Name</div>
            </div>
            <div class="col-md-6">
                <label class="form-label fw-bold">Цена:</label>
                <div class="form-control-plaintext text-danger fw-bold">@Model.Price.ToString("N2") лв.</div>
            </div>
            <div class="col-12">
                <label class="form-label fw-bold">Описание:</label>
                <div class="form-control-plaintext">@Model.Description</div>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-danger">🗑️ Изтрий</button>
                <a asp-action="Index" class="btn btn-outline-secondary">⬅ Отказ</a>
            </div>
        </form>
    </div>
</div>
